<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginPage"
    android:background="@drawable/backg">


    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="269dp"
        android:layout_height="135dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/logo3" />

    <EditText
        android:id="@+id/nameField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:fontFamily="monospace"
        android:hint="Nome"
        android:inputType="textPersonName"
        android:textAlignment="textStart"
        android:textColor="@android:color/background_light" />

    <EditText
        android:id="@+id/cursoField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameField"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:fontFamily="monospace"
        android:hint="Curso"
        android:inputType="textPersonName"
        android:textAlignment="textStart"
        android:textColor="@android:color/background_light" />

    <EditText
        android:id="@+id/anoField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ems="10"
        android:fontFamily="monospace"
        android:hint="Ano de Escolaridade"
        android:inputType="textPersonName"
        android:textAlignment="textStart"
        android:textColor="@android:color/background_light" />

    <EditText
        android:id="@+id/emailField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/passField"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:fontFamily="monospace"
        android:hint="Email"
        android:inputType="textPersonName"
        android:textAlignment="textStart"
        android:textColor="@android:color/background_light" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView5"
        android:layout_centerHorizontal="true"
        android:fontFamily="monospace"
        android:text="Regista-te"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textColor="@android:color/darker_gray"
        android:textSize="26sp" />

    <EditText
        android:id="@+id/passFieldConf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnRegister"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:fontFamily="monospace"
        android:hint="Confirmar Password"
        android:inputType="textPassword"
        android:textColor="@android:color/background_light" />

    <EditText
        android:id="@+id/passField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/passFieldConf"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:fontFamily="monospace"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="@android:color/background_light" />

    <TextView
        android:id="@+id/goToSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnGoToSignIn"
        android:layout_centerHorizontal="true"
        android:fontFamily="monospace"
        android:text="Já tens conta?"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btnGoToSignIn"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:text="Iniciar Sessão" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/goToSignIn"
        android:layout_centerHorizontal="true"
        android:text="Registar" />
</RelativeLayout>